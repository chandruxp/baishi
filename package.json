{
  "name": "baishi",
  "version": "1.0.0",
  "description": "AI-powered shell wrapper that converts natural language to shell commands",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "baishi": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "setup": "tsx src/setup.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "shell",
    "cli",
    "natural-language",
    "openai",
    "google-ai",
    "ollama"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@google/generative-ai": "^0.14.1",
    "@inquirer/prompts": "^5.0.5",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.6",
    "openai": "^4.52.7",
    "ora": "^8.0.1",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}